<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@android:color/transparent" />

    <item
        android:bottom="-100dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="7"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <gradient android:startColor="#99F44437" android:endColor="@android:color/transparent" android:angle="360" />
            </shape>
        </rotate>
    </item>
</layer-list>