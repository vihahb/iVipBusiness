<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.xtel.ivipbusiness.view.activity.ChooseLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/size_48"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_48"
            android:paddingTop="@dimen/size_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.xtel.ivipbusiness.view.widget.SquareImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:ellipsize="end"
                android:gravity="top|center_horizontal"
                android:maxLines="1"
                android:text="@string/ivip_for_business"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <Button
            android:id="@+id/choose.btn_phone_number"
            style="@style/button_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:background="@drawable/button_border"
            android:text="@string/login_by_phone" />
    </LinearLayout>
</LinearLayout>