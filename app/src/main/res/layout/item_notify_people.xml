<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:paddingTop="@dimen/size_16">

    <TextView
        android:id="@+id/item.notify.txt_people_title"
        style="@style/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_people" />

    <TextView
        android:id="@+id/item.notify.txt_people_date"
        style="@style/textview_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:drawablePadding="@dimen/size_6"
        android:layout_marginTop="@dimen/size_10"
        android:gravity="center_vertical"
        android:text="@string/day_create" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/size_16"
        android:background="@android:color/white" />
</LinearLayout>