<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_level.container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20"
        tools:ignore="UselessParent">

        <TextView
            style="@style/textview_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:text="@string/min_point" />

        <EditText
            android:id="@+id/add_level.edt_limit"
            style="@style/edittext_outline_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_marginTop="@dimen/size_16"
            android:drawableLeft="@drawable/ic_action_age"
            android:drawableStart="@drawable/ic_action_age"
            android:inputType="number" />

        <TextView
            style="@style/textview_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:text="@string/level_name" />

        <EditText
            android:id="@+id/add_level.edt_name"
            style="@style/edittext_outline_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_marginTop="@dimen/size_16"
            android:drawableLeft="@drawable/ic_action_age"
            android:drawableStart="@drawable/ic_action_age"
            android:inputType="textCapSentences" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/add_level.recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_16"
            android:layout_marginTop="@dimen/size_16" />

        <Button
            android:id="@+id/add_level.btn_add_member_card"
            style="@style/button_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_36"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_8"
            android:background="@drawable/button_transparent"
            android:text="@string/add_member_card" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/add_level.btn_done"
            style="@style/button_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_36"
            android:layout_gravity="right|end"
            android:layout_marginBottom="@dimen/size_8"
            android:background="@drawable/button_transparent"
            android:text="@string/action_done" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/add_level.layout_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.xtel.ivipbusiness.view.widget.TouchImageView
            android:id="@+id/add_level.expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/add_level.txt_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_margin="@dimen/size_16"
            android:background="@drawable/round_black_24"
            android:drawableEnd="@drawable/ic_action_done"
            android:drawableRight="@drawable/ic_action_done"
            android:padding="@dimen/size_2"
            android:visibility="gone" />
    </FrameLayout>
</FrameLayout>