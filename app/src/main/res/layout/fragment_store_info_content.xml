<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16">

    <TextView
        android:id="@+id/store_info.txt_address"
        style="@style/textview_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24"
        android:text="@string/store_address" />

    <TextView
        android:id="@+id/store_info.txt_phone"
        style="@style/textview_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:text="@string/phone" />

    <TextView
        android:id="@+id/store_info.txt_des"
        style="@style/textview_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:maxLines="4"
        android:text="@string/store_des" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:layout_marginTop="@dimen/size_16"
        android:gravity="right|bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/store_info.img_qrCode"
            android:layout_width="@dimen/size_100"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/store_info.img_barCode"
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</LinearLayout>