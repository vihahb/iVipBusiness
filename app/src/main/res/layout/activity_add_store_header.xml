<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryKey_80">

    <ImageView
        android:id="@+id/add_store.img_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_210"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_210"
        android:background="@color/colorPrimaryKey_40" />

    <ImageButton
        android:id="@+id/add_store.img_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/button_transparent"
        android:clickable="true"
        android:contentDescription="@null"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_16"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_16">

        <EditText
            android:id="@+id/add_store.edt_name"
            style="@style/edittext_no_drawable"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:layout_weight="1"
            android:hint="@string/store_name"
            android:inputType="textCapWords"
            tools:ignore="LabelFor" />

        <com.xtel.ivipbusiness.view.widget.RoundImage
            android:id="@+id/add_store.img_avatar"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</FrameLayout>