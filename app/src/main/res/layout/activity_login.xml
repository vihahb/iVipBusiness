<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="false"
        tools:context="com.xtel.ivipbusiness.view.activity.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_24"
            android:paddingTop="@dimen/size_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.xtel.ivipbusiness.view.widget.SquareImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/size_48"
                android:paddingRight="@dimen/size_48">

                <EditText
                    android:id="@+id/login.edt_username"
                    style="@style/edittext_no_drawable"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:hint="@string/input_phone"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/login.edt_pass"
                    style="@style/edittext_no_drawable"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginTop="@dimen/size_8"
                    android:hint="@string/input_pass"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    tools:ignore="LabelFor" />

                <Button
                    android:id="@+id/login.btn_login"
                    style="@style/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginBottom="@dimen/size_8"
                    android:layout_marginTop="@dimen/size_16"
                    android:background="@drawable/button_border"
                    android:text="@string/login"
                    android:textAllCaps="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_48"
                android:layout_marginRight="@dimen/size_48"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="@dimen/size_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/login.btn_register"
                        style="@style/button_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_24"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/login.view_line"
                        android:layout_toStartOf="@+id/login.view_line"
                        android:background="@drawable/button_transparent"
                        android:gravity="center_vertical|right|end"
                        android:maxHeight="@dimen/size_56"
                        android:paddingLeft="@dimen/size_8"
                        android:paddingRight="@dimen/size_8"
                        android:text="@string/join_now" />

                    <View
                        android:id="@+id/login.view_line"
                        android:layout_width="@dimen/size_1"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/login.btn_forget"
                        android:layout_alignTop="@+id/login.btn_forget"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/size_2"
                        android:layout_marginLeft="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_8"
                        android:layout_marginTop="@dimen/size_2"
                        android:background="@android:color/white" />

                    <Button
                        android:id="@+id/login.btn_forget"
                        style="@style/button_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_24"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/login.view_line"
                        android:layout_toRightOf="@+id/login.view_line"
                        android:background="@drawable/button_transparent"
                        android:gravity="center_vertical|left|start"
                        android:maxHeight="@dimen/size_56"
                        android:paddingLeft="@dimen/size_8"
                        android:paddingRight="@dimen/size_8"
                        android:text="@string/forgot_password" />
                </RelativeLayout>

                <Button
                    android:id="@+id/login.btn_active"
                    style="@style/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_24"
                    android:background="@drawable/button_transparent"
                    android:maxHeight="@dimen/size_56"
                    android:text="@string/active_account" />
            </LinearLayout>
        </LinearLayout>
        <!--</ScrollView>-->
    </ScrollView>
</LinearLayout>