<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_option_fcm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.xtel.ivipbusiness.view.activity.ChooseOptionFcmActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_50"
            android:background="@color/colorPrimaryKey_80"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_64"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area" />

                    <Spinner
                        android:id="@+id/option.sp_area"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_36"
                        android:layout_marginTop="@dimen/size_6"
                        android:background="@android:color/transparent" />

                    <TextView
                        style="@style/textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_26"
                        android:text="@string/gender" />

                    <Spinner
                        android:id="@+id/option.sp_gender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_36"
                        android:layout_marginTop="@dimen/size_6"
                        android:background="@android:color/transparent" />

                    <TextView
                        style="@style/textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_26"
                        android:text="@string/level" />

                    <Spinner
                        android:id="@+id/option.sp_level"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_36"
                        android:layout_marginTop="@dimen/size_6"
                        android:background="@android:color/transparent" />

                    <TextView
                        style="@style/textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_26"
                        android:text="@string/age" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_6"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            style="@style/edittext_outline"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_36"
                            android:layout_marginEnd="@dimen/size_8"
                            android:layout_marginRight="@dimen/size_8"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_action_phone"
                            android:drawableStart="@drawable/ic_action_phone"
                            android:hint="@string/from"
                            android:inputType="phone" />

                        <View
                            android:layout_width="@dimen/size_8"
                            android:layout_height="@dimen/size_1"
                            android:background="@android:color/white" />

                        <EditText
                            style="@style/edittext_outline"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_36"
                            android:layout_marginLeft="@dimen/size_8"
                            android:layout_marginStart="@dimen/size_8"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_action_phone"
                            android:drawableStart="@drawable/ic_action_phone"
                            android:hint="@string/to"
                            android:inputType="phone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_8"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16">

                <Button
                    style="@style/button_login"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_36"
                    android:background="@drawable/button_transparent"
                    android:text="@string/cancel_one" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent" />

                <Button
                    style="@style/button_login"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_36"
                    android:background="@drawable/button_transparent"
                    android:text="@string/action_done" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>