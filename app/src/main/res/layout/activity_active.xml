<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.xtel.ivipbusiness.view.activity.ActiveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:fitsSystemWindows="false"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_24"
        android:paddingLeft="@dimen/size_48"
        android:paddingRight="@dimen/size_48"
        android:paddingTop="@dimen/size_24"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/active.edt_username"
            style="@style/edittext_no_drawable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:hint="@string/input_phone"
            android:inputType="phone"
            android:paddingLeft="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/active.btn_active"
            style="@style/button_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:layout_marginTop="@dimen/size_16"
            android:background="@drawable/button_border"
            android:text="@string/active_account" />
    </LinearLayout>
</LinearLayout>