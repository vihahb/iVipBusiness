<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:orientation="vertical">

    <EditText
        android:id="@+id/add_store.edt_type"
        style="@style/edittext_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_8"
        android:hint="Tên cửa hàng"
        android:inputType="textCapSentences"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/add_store.edt_address"
        style="@style/edittext_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_8"
        android:hint="Địa chỉ cửa hàng"
        android:inputType="textCapSentences"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/add_store.edt_phone"
        style="@style/edittext_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_8"
        android:hint="Số điện thoại"
        android:inputType="phone"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/add_store.edt_des"
        style="@style/edittext_des"
        android:lines="3"
        android:maxLines="4"
        android:minLines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:hint="Mô tả cửa hàng"
        android:inputType="textCapSentences"
        tools:ignore="LabelFor" />
</LinearLayout>