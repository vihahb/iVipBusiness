<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.xtel.ivipbusiness.view.activity.AddLevelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/add_level.toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryKey_90"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/Toolbar_TitleText" />

        <TextView
            style="@style/textview_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_16"
            android:text="@string/min_point" />

        <EditText
            android:id="@+id/add_level.edt_limit"
            style="@style/edittext_outline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:drawableLeft="@drawable/ic_action_age"
            android:drawableStart="@drawable/ic_action_age"
            android:inputType="number" />

        <TextView
            style="@style/textview_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_16"
            android:layout_marginTop="@dimen/size_16"
            android:text="@string/level_name" />

        <EditText
            android:id="@+id/add_level.edt_name"
            style="@style/edittext_outline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:drawableLeft="@drawable/ic_action_age"
            android:drawableStart="@drawable/ic_action_age"
            android:inputType="textCapSentences" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/add_level.btn_done"
            style="@style/button_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_36"
            android:layout_gravity="right|end"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:background="@drawable/button_transparent"
            android:text="@string/action_done" />
    </LinearLayout>
</LinearLayout>