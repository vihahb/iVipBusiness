<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_180">

    <ImageView
        android:id="@+id/profile.img_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile.txt_total_store"
            style="@style/textview_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginTop="@dimen/size_16"
            android:gravity="right|end"
            android:text="@string/loading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="@dimen/size_16">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="@dimen/size_16"
                android:paddingRight="@dimen/size_16">

                <EditText
                    android:id="@+id/profile.edt_fullname"
                    style="@style/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginTop="@dimen/size_8"
                    android:hint="@string/phone"
                    android:inputType="textCapWords" />

                <TextView
                    android:id="@+id/profile.txt_date_create"
                    style="@style/textview_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8"
                    android:text="@string/loading" />
            </LinearLayout>

            <com.xtel.ivipbusiness.view.widget.RoundImage
                android:id="@+id/profile.img_avatar"
                android:layout_width="@dimen/size_48"
                android:layout_height="@dimen/size_48"
                android:contentDescription="@null"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>