<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryKey_90">

    <ImageView
        android:id="@+id/profile.img_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180"
        android:src="@mipmap/ic_avatar_default"
        android:layout_alignBottom="@+id/profile.layout_header_content"
        android:layout_alignTop="@+id/profile.layout_header_content"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180"
        android:background="@color/black_40" />

    <LinearLayout
        android:id="@+id/profile.layout_header_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_12"
            android:paddingLeft="@dimen/size_4"
            android:paddingRight="@dimen/size_4"
            android:paddingTop="@dimen/size_8">

            <TextView
                android:id="@+id/profile.txt_date_create"
                style="@style/textview_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_create" />

            <TextView
                android:id="@+id/profile.txt_total_store"
                style="@style/textview_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:layout_weight="1"
                android:gravity="right|end"
                android:text="@string/store_number" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_10"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2">

                <EditText
                    android:id="@+id/profile.txt_fullname"
                    style="@style/edittext_no_drawable_low"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fullname"
                    android:inputType="textCapWords" />

                <EditText
                    android:id="@+id/profile.txt_email"
                    style="@style/edittext_no_drawable_low"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|end">

                <com.xtel.ivipbusiness.view.widget.RoundImage
                    android:id="@+id/profile.img_avatar"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_avatar_default" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
