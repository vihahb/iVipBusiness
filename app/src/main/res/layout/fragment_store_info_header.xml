<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryKey_80">

    <ImageView
        android:id="@+id/store_info.img_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180"
        android:layout_alignBottom="@+id/store_info.layout_header_content"
        android:layout_alignTop="@+id/store_info.layout_header_content"
        android:alpha="0.9"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180"
        android:background="@color/colorPrimaryKey_40" />

    <ImageButton
        android:id="@+id/store_info.img_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/button_transparent"
        android:contentDescription="@null"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_camera" />

    <LinearLayout
        android:id="@+id/store_info.layout_header_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:weightSum="3"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_4"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <EditText
            android:id="@+id/store_info.edt_fullname"
            style="@style/edittext_no_drawable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/fullname"
            android:layout_weight="2"
            android:inputType="textCapWords" />
    </LinearLayout>
</RelativeLayout>